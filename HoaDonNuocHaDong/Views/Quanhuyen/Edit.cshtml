@model HoaDonNuocHaDong.Quanhuyen

@{
    ViewBag.Title = "Cập nhật thông tin quận huyện";

}


<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget widget-table action-table">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Chỉnh sửa thông tin quận huyện</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            @using (Html.BeginForm("edit", "Quanhuyen"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(p => p.QuanhuyenID);
                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Tên quận huyện : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Ten, new { @class = "form-control width",@maxlength=31,@style="width:92%" })
                                        @Html.ValidationMessageFor(p=>p.Ten)
                                    </div>
                                    <br/>
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Số điện thoại: </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.DienThoai, new { @class = "form-control width",@maxlength=50,@style="width:92%" })
                                    </div>
                                    <br/>
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Số điện thoại 2: </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.DienThoai2, new { @class = "form-control width",@maxlength=50, @style = "width:92%" })
                                    </div>
                                    <br/>
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Số điện thoại 3: </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.DienThoai3, new { @class = "form-control width",@maxlength=50, @style = "width:92%" })
                                    </div>
                                </div>                               

                                <div class="form-group" style="margin-left:2%">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                        <button type="button" class="btn btn-danger" onclick="history.go(-1);">Quay lại</button>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- /widget-content -->
                    </div>
                    <!-- /widget -->
                </div>
                <!-- /span6 -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /main-inner -->
</div>
<!-- /main -->
