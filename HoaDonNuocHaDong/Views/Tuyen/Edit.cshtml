@model HoaDonNuocHaDong.Tuyenkhachhang

@{
    ViewBag.Title = "Cập nhật tuyến khách hàng";

    var nhanVien = (List<Nhanvien>)ViewBag._nhanVien;
    var selectedNhanVien = ViewBag.selectedNhanVien;
    var hasTuyen = ViewBag.hasTuyen;
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget widget-table action-table">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Cập nhật tuyến khách hàng</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            @using (Html.BeginForm("edit", "Tuyen"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(p=>p.TuyenKHID)
                                @Html.HiddenFor(p=>p.IsDelete)
                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Mã tuyến : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Matuyen, new { @class = "form-control width" })
                                        <br />
                                        @Html.ValidationMessageFor(p => p.Matuyen)
                                        @if (hasTuyen != null)
                                        {
                                            <span class="red">Mã tuyến đã tồn tại trong cơ sở dữ liệu</span>
                                        }
                                    </div>
                                </div>
                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Tên tuyến : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Ten, new { @class = "form-control width", @style = ";width:50%" })
                                        <br />
                                        @Html.ValidationMessageFor(p => p.Ten)
                                    </div>
                                </div>                              
                                <div class="form-group" style="margin-left:2%">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                        <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Index","Tuyen")'">Quay lại</button>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- /widget-content -->
                    </div>
                    <!-- /widget -->
                </div>
                <!-- /span6 -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /main-inner -->
</div>

<style>
    .field-validation-error {
        margin-left: 0;
    }
</style>