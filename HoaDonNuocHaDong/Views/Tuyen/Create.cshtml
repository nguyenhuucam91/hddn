@model HoaDonNuocHaDong.Tuyenkhachhang

@{
    ViewBag.Title = "Create";

    var hasTuyen = ViewBag.hasTuyen;
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget widget-table action-table">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Thêm tuyến khách hàng</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">

                            @using (Html.BeginForm("create", "Tuyen"))
                            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Mã tuyến : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Matuyen, new { @class = "form-control width" })
                                        <br />
                                        @Html.ValidationMessageFor(p => p.Matuyen)
                                        @if (hasTuyen != null)
                                        {
                                            <span class="red">Tuyến với mã và tên đã tồn tại trong cơ sở dữ liệu. Xin đổi tên khác</span>
                                        }
                                    </div>
                                </div>
                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Tên tuyến : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Ten, new { @class = "form-control width", @style = "width:70%" })
                                        <br />
                                        @Html.ValidationMessageFor(p => p.Ten)
                                    </div>
                                </div>
                                
                                <div class="form-group" style="margin-left:2%">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                                        <button type="button" class="btn btn-danger" onclick="history.go(-1);">Quay lại</button>
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- /widget-content -->
                    </div>
                    <!-- /widget -->
                </div>
                <!-- /span6 -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /main-inner -->
</div>

<style>
    .field-validation-error {
        margin-left: 0;
    }
</style>