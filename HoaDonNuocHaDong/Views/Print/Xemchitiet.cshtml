@{
    ViewBag.Title = "Danh sách in hóa đơn";

    HoaDonHaDong.Helper.ChiSo cS = new HoaDonHaDong.Helper.ChiSo();
    HoaDonNuocHaDong.Helper.HoaDonNuoc hoaDonNuoc = new HoaDonNuocHaDong.Helper.HoaDonNuoc();

    double SH1Price = cS.getSoTienTheoApGia("SH1").Value;
    double SH2Price = cS.getSoTienTheoApGia("SH2").Value;
    double SH3Price = cS.getSoTienTheoApGia("SH3").Value;
    double SH4Price = cS.getSoTienTheoApGia("SH4").Value;
    double HCPrice = cS.getSoTienTheoApGia("HC").Value;
    double CCPrice = cS.getSoTienTheoApGia("CC").Value;
    double SXPrice = cS.getSoTienTheoApGia("SX-XD").Value;
    double KDPrice = cS.getSoTienTheoApGia("KDDV").Value;
    HoaDonHaDongEntities db = new HoaDonHaDongEntities();
    var selectedMonth = Request.QueryString["month"];
    var selectedYear = Request.QueryString["year"];
    //danh sách khách hàng tính tiền
    var dsKH = ViewBag.dsachKH as List<HoaDonNuocHaDong.Models.InHoaDon.TuyenTinhTien>;
}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Xem danh sách hóa đơn (Tổng cộng: @dsKH.Count hóa đơn)</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            <form action="/Print/ChiSoTuyen" method="post">
                                <input type="hidden" value="@Request.QueryString["quan"]" name="quan" />
                                <input type="hidden" value="@Request.QueryString["to"]" name="to" />
                                <input type="hidden" value="@Request.QueryString["month"]" name="thang" />
                                <input type="hidden" value="@Request.QueryString["year"]" name="nam" />
                                <button type="submit" class="btn btn-default">Quay lại</button>
                            </form>

                            @if (HDNHD.Core.Models.RequestScope.UserRole == HDNHD.Models.Constants.EUserRole.InHoaDon)
                            {
                                <button type="button" class="btn btn-warning" onclick="window.open('@Url.Action("PrintAllPreview", "Print", new { 
                                                                                                   @TuyenID = ViewBag.selectedTuyen, 
                                                                                                   @month = selectedMonth, 
                                                                                                   @year = selectedYear })')">Xem trước in tất cả</button>
                                
                                <button type="button" class="btn btn-warning" onclick="window.open('@Url.Action("PrintCrystalReport", "Print", new { 
                                                                                                   @TuyenID = ViewBag.selectedTuyen, 
                                                                                                   @month = selectedMonth, 
                                                                                                   @year = selectedYear })')">In tất cả</button>
                                <p></p>
                                <!-- Preview khách hàng được chọn -->
                                 <form action="/Print/PrintAllSelected?TuyenID=@Request.QueryString["tuyen"]&month=@selectedMonth&year=@selectedYear" method="post">
                                    <input type="hidden" class="printSelectedHidden" name="printSelectedHidden" />                                    
                                    <button type="submit" class="btn btn-success printSelected">Xem trước in hóa đơn được chọn</button>
                                  
                                </form>
                                
                                <!--Form in danh sách khách hàng được chọn-->
                                <form action="/Print/PrintSelected?TuyenID=@Request.QueryString["tuyen"]&month=@selectedMonth&year=@selectedYear" method="post">
                                    <input type="hidden" class="printSelectedHidden" name="printSelectedHidden" />                                                                       
                                    <button type="submit" class="btn btn-success printSelected">In hóa đơn được chọn</button>
                                </form>

                                 
                                
                                <form action="/Print/PrintFrom?TuyenID=@Request.QueryString["tuyen"]&month=@selectedMonth&year=@selectedYear" method="post">
                                    <input type="number" placeholder="Từ số hóa đơn" name="from" class="negNumber" />
                                    <input type="number" placeholder="đến số hóa đơn" name="to" class="negNumber" />
                                    <input type="submit" value="Xem trước in danh sách theo số hóa đơn" name="printFrom"/>
                                    <input type="submit" value="In danh sách theo số hóa đơn" name="printFrom" />
                                </form>
                            }

                            <!-- Hướng dẫn -->
                            <div class="huongDan">
                                <p>Những khách hàng nào đã in chỉ số thì tên khách hàng được hiện màu đỏ</p>
                            </div>

                            <div>
                                <div style="float:left">
                                    <div style="width: 30px; height: 30px; background-color: #2982A2; float: left"></div><span>Hóa đơn bị hủy / chưa cập nhật</span>
                                </div>
                                <div style="float:left;margin-left:30px">
                                    <div style="width: 30px; height: 30px; background-color: #f1c0c0; float: left"></div><span>Hóa đơn bị hủy / đã cập nhật</span>
                                </div>
                                <div style="float:left;margin-left:30px">
                                    <div style="width: 30px; height: 30px; background-color: #b8860b; float: left"></div><span>Hóa đơn đã in</span>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <!-- Bảng xem chỉ số -->
                            <table class="unlimited table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Thứ tự đọc</th>
                                        <th>Sản lượng</th>
                                        <th>Trước thuế</th>
                                        <th>VAT</th>
                                        <th>MT</th>
                                        <th>Tổng cộng</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{
                                        int i = 1;
                                    }

                                    @foreach (var item in dsKH)
                                    {

                                        int hoaDonNuocID = item.HoaDonNuoc;
                                        Hoadonnuoc hoaDonObj = db.Hoadonnuocs.Find(hoaDonNuocID);
                                        String ttHoaDonBiHuyCssClass = hoaDonNuoc.getCssClassTinhTrangHoaDonBiHuy(hoaDonNuocID);
                                        String ttInCssClass = hoaDonObj.Trangthaiin.GetValueOrDefault() == true ? "hoadonprinted" : "";

                                        String cssClass = String.Join(" ", new String[] { ttHoaDonBiHuyCssClass, ttInCssClass });
                                        <tr class="@cssClass">
                                            <td><input type="checkbox" name="check" value="@hoaDonNuocID" /></td>
                                            <td>@i</td>
                                            <td>@item.MaKH</td>
                                            <!-- Những khách hàng nào đã in chỉ số thì hiện màu đỏ -->
                                            @if (hoaDonObj.Trangthaiin == true)
                                            {
                                                <td>@item.TenKH</td>
                                            }
                                            else
                                            {
                                                <td>@item.TenKH</td>
                                            }
                                            <td>@item.DiaChi</td>
                                            <td>@item.NgayBatDau</td>
                                            <td>@item.NgayKetThuc</td>
                                            <td>@item.TTDoc</td>
                                            <td>@item.SanLuong</td>
                                            @{
                                        double Sum = item.SH1Price * item.SH1 + item.SH2Price * item.SH2 + item.SH3Price * item.SH3 + item.SH4Price * item.SH4 +
                                            item.CCPrice * item.CC + item.HCPrice * item.HC + item.SXPrice * item.SX + item.KDPrice * item.KD;
                                            }
                                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:n0}", Sum)</td>
                                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:n0}", item.PhiVAT)</td>
                                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:n0}", item.PhiBVMT)</td>
                                            <td style="color:blue">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:n0}", item.TongCong)</td>
                                        </tr>
                                        i++;
                                    }

                                </tbody>


                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
