@{
    ViewBag.Title = "Danh sách khách hàng có sản lượng không bình thường";
    var kH = ViewBag.khachHang;
    var tenTuyen = ViewBag.tenTuyen;
    int year = ViewBag.year;
    int month = ViewBag.month;
    //tuyến
    String[] tuyenIDSession = Session["tuyenID"].ToString().Split(',');
    var tuyenTheoNhanVien = ViewBag.tuyenTheoNhanVien;
    //show hóa đơn hay không
    var receiptIsShown = ViewBag.showHoaDon;
    //tuyến đc chọn
    var selectedTuyen = ViewBag.selectedTuyen;
    //áp giá đặc biệt class
    HoaDonNuocHaDong.Helper.ApGiaHelper helper = new HoaDonNuocHaDong.Helper.ApGiaHelper();
    var currentDate = ViewBag.currentDate;
    var nextMonth = ViewBag.nextMonth;
    var selectedNhanvien = ViewBag.selectedNhanvien;
    Nhanvien nhanVienObj = ViewData["nhanVienObj"] as Nhanvien;
    Tuyenkhachhang tuyenObj = ViewData["tuyenObj"] as Tuyenkhachhang;
    //Query string
    int nVQuanLi = Convert.ToInt32(Request.QueryString["nhanvienInt"]);
    int tuyenID = Convert.ToInt32(Request.QueryString["tuyenID"]);
}

<script src="~/Assets/js/jquery.dataTables.min.js"></script>
<script src="~/Assets/js/dataTables.fixedHeader.min.js"></script>
<link rel="stylesheet" href="~/Assets/css/fixedHeader.dataTables.min.css" />

<div class="main">

    <div class="main-inner">

        <div class="container-fluid">

            <div class="row">


                <div class="widget ">

                    <div class="widget-header">
                        <i class="icon-user"></i>
                        <h3>Danh sách khách hàng có sản lượng không bình thường</h3>
                    </div> <!-- /widget-header -->

                    <div class="widget-content">
                        <div class="form-actions">
                            <button type="button" onclick="location.href='@Url.Action("ViewDetail", new { tuyenID = tuyenID,month = month,year = year, nvquanly = nVQuanLi })'" class="btn btn-success">Trở lại</button>
                        </div> <!-- /form-actions -->
                        <div class="outerTable">
                            <table class="table table-bordered hoaDonNuoc">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Số hộ</th>
                                        <th>Số khẩu</th>
                                        <th>TT đọc</th>
                                        <th>Bắt đầu (d/m/y)</th>
                                        <th>Kết thúc(d/m/y)</th>
                                        <th>Chỉ số cũ</th>
                                        <th>Chỉ số mới</th>
                                        <th>Sản lượng</th>
                                        <th>Số khoán</th>
                                        <th>Kiểm định</th>
                                        <th data-toggle="tooltip" data-placement="top" title="Màu đỏ là danh sách những khách hàng có áp giá đặc biệt trong tháng này">Hướng dẫn</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in ViewBag.khachHang)
                                    {
                                        <tr>

                                            <!-- Accessing property of anonymous type of object-->
                                            <td>@i</td>
                                            <td>@item.GetType().GetProperty("MaKhachHang").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("TenKhachHang").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("SoHo").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("SoKhau").GetValue(item, null)</td>
                                            <td><input type="text" readonly data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" name="thuTuDoc" style="width:70px" value="@item.GetType().GetProperty("ThuTuDoc").GetValue(item, null)" /></td>
                                            <!-- Bắt đầu -->
                                            @{
                                        HoaDonHaDongEntities db = new HoaDonHaDongEntities();
                                        int hoaDonID = Convert.ToInt32(item.GetType().GetProperty("ColID").GetValue(item, null));
                                        Lichsuhoadon ls = db.Lichsuhoadons.FirstOrDefault(p => p.HoaDonID == hoaDonID);
                                            }
                                            @if (ls == null)
                                            {
                                                <td class="startDate"><input type="text" style="width:80%" name="startDate" value="@currentDate" data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" /></td>
                                                <td class="endDate"><input type="text" style="width:80%" name="endDate" value="@nextMonth" data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" /></td>
                                            }
                                            else
                                            {
                                                <td class="startDate"><input type="text" style="width:80%" name="startDate" value="@ls.NgayBatDau" data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" /></td>
                                                <td class="endDate"><input type="text" style="width:80%" name="endDate" value="@ls.NgayKetThuc" data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" /></td>
                                            }
                                            <!-- Kết thúc -->
                                            <td><input type="text" style="width:60px" value="@item.GetType().GetProperty("ChiSoCu").GetValue(item, null)" readonly /></td>
                                            <td><input type="number" class="negNumber" min="0" placeholder="@item.GetType().GetProperty("ChiSoCu").GetValue(item, null)" name="chiSoMoi" data-khid="@item.GetType().GetProperty("KhachHangID").GetValue(item, null)" id="@i.ToString()" data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" style="width:80px" placeholder="@item.GetType().GetProperty("ChiSoMoi").GetValue(item, null)"></td>
                                            <td><input type="text" style="width:60px" name="sanLuong" readonly value="@item.GetType().GetProperty("SanLuong").GetValue(item, null)" /></td>
                                            <td><input type="number" data-khid="@item.GetType().GetProperty("KhachHangID").GetValue(item, null)" data-hoadonid="@item.GetType().GetProperty("ColID").GetValue(item, null)" name="soKhoan" style="width:80px" placeholder="0" /></td>
                                            <td>
                                                @if (HoaDonNuocHaDong.Helper.KiemDinh.checkKiemDinhStatus(item.GetType().GetProperty("KhachHangID").GetValue(item, null), month, year))
                                                {
                                                    <input type="checkbox" class="toggle" checked="checked" disabled data-truockd="@HoaDonNuocHaDong.Helper.KiemDinh.getChiSoLucKiemDinh(item.GetType().GetProperty("KhachHangID").GetValue(item, null),month,year)"
                                                           data-saukd="@HoaDonNuocHaDong.Helper.KiemDinh.getChiSoSauKiemDinh(item.GetType().GetProperty("KhachHangID").GetValue(item, null),month,year)" />
                                                    //thêm arrow nếu có kiểm định
                                                    <button data-trid="details-@i" type="button" data-khid="@item.GetType().GetProperty("KhachHangID").GetValue(item, null)" data-month="@month" data-year="@year"
                                                            title="Xem chi tiết kiểm định" class="btn btn-default dropdown-toggle xemChiTietKD">
                                                        <span class="caret"></span> <span class="sr-only"></span>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="toggle" disabled />
                                                }
                                            </td>
                                            <td>
                                                <!-- Áp giá đặc biệt -->
                                                @if (helper.isApGiaDacBiet(item.GetType().GetProperty("ColID").GetValue(item, null)) > 0)
                                                {

                                                    <a href="@Url.Action("Apgiadacbiet", "Solieutieuthu", new { @id = item.GetType().GetProperty("HoaDonNuocID").GetValue(item, null), @month = month, @year = year})" style="color:red">Áp giá đặc biệt</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Apgiadacbiet", "Solieutieuthu", new { @id = item.GetType().GetProperty("HoaDonNuocID").GetValue(item, null), @month = month, @year = year })">Áp giá đặc biệt</a>
                                                }
                                            </td>
                                        </tr>
                                            <!-- Phần phụ để hiển thị thông tin kiểm định, không phải lúc nào cũng hiện ra, sử dụng ajax để load -->
                                                i++;
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <td colspan="14"><b>(@tuyenObj.Matuyen - @tuyenObj.Ten) - (@nhanVienObj.MaNhanVien - @nhanVienObj.Ten) - (@month / @year)</b></td>
                                    </tr>
                                </tfoot>
                            </table>
                            <!--end table-->
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
