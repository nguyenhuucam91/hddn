@model HoaDonNuocHaDong.Chinhanh

@{
    ViewBag.Title = "Create";

}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget widget-table action-table">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Thêm chi nhánh</h3>
                        </div>
                        <!-- /widget-header -->
                        <div class="widget-content">
                            @using (Html.BeginForm("create", "Chinhanh"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Mã chi nhánh : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Machinhanh, new { @class="form-control width"})
                                    </div>
                                </div>
                                <div class="form-group" style="margin:2%">
                                    <label for="" class="col-sm-2 control-label" style="margin-right:3%">Tên chi nhánh : </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(p => p.Ten, new { @class = "form-control width" })
                                    </div>
                                </div>
                                <div class="form-group" style="margin:2%">
                                    @Html.LabelFor(model => model.QuanhuyenID, "Quận huyện", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(p => p.QuanhuyenID,(SelectList)ViewBag.QuanhuyenID, new { @class = "dropdown quan" })
                                        @Html.ValidationMessageFor(model => model.QuanhuyenID)
                                    </div>
                                </div>
                                <div class="form-group" style="margin:2%">
                                    @Html.LabelFor(model => model.Diachi,"Địa chỉ", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Diachi, new { @rows=6, @cols=15})
                                        @Html.ValidationMessageFor(model => model.Diachi)
                                    </div>
                                </div>


                                <div class="form-group" style="margin-left:2%">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                                        <button type="button" class="btn btn-danger" onclick="history.go(-1);">Quay lại</button>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- /widget-content -->
                    </div>
                    <!-- /widget -->
                </div>
                <!-- /span6 -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /main-inner -->
</div>
<!-- /main -->
