@model IEnumerable<HoaDonNuocHaDong.Chucvu>

@{
    ViewBag.Title = "Danh sách Chức vụ";

}

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <!-- /span6 -->
                <div class="span12" style="margin-left:1% !important">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-list"></i>
                            <h3>Quản lý Chức vụ</h3>
                        </div>
                        <div class="widget-content">
                            <!-- Thêm mới Chức vụ sử dụng modal box-->
                            <div class="controls">
                                <!-- Button to trigger modal -->
                                <a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">Thêm mới Chức vụ</a>

                                <!-- Modal -->
                                @using (Html.BeginForm("Create", "Chucvu"))
                                {
                                    @Html.AntiForgeryToken()

                                    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                            <h3 id="myModalLabel">Thêm mới Chức vụ</h3>
                                        </div>
                                        <div class="modal-body">
                                            <p>Tên Chức vụ</p>
                                            <p><input class="text-box single-line" id="Ten" required="required" name="Ten" value="" type="text" style="width:98%"></p>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-primary">Thêm mới</button>
                                            <button class="btn" data-dismiss="modal" aria-hidden="true">Hủy</button>
                                        </div>
                                    </div>
                                }
                            </div>
                            <!-- Bảng Chức vụ -->
                            <table class="example table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            STT
                                        </th>
                                        <th>
                                            Tên Chức vụ
                                        </th>

                                        <th>
                                            Hành động
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 1;}
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ten)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.ChucvuID }) |
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.ChucvuID }, new
                                           {
                                               @onclick = "return confirm('Bạn có muốn xóa Chức vụ này không.')"
                                           })
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>