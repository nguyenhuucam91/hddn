
@{
    ViewBag.Title = "BaoCaoHoaDonNhan";

    List<Tuyenkhachhang> ls = ViewData["tuyen"] as List<Tuyenkhachhang>;
    List<LoaiKH> loaiKH = ViewData["loaiKH"] as List<LoaiKH>;
}

<link href="~/Content/Style.css" rel="stylesheet" />
<div class="row" style="margin-left:4%">
    <!-- /span6 -->
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-bookmark"></i>
                <h3>Tùy chọn hóa đơn nhận</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                @using (Html.BeginForm("XuliBaoCaoHoaDonNhan", "BaocaoInHoaDon"))
                {
                    <div class="xulybc">
                        <p>Tuyến:
                            <select name="tuyen" class="dropdown allowClear"  style="width:80%">
                                @foreach (var item in ls)
                                {
                                    <option value="@item.TuyenKHID">@item.Matuyen - @item.Ten</option>
                                }
                            </select>                        
                        </p>
                        <p>
                            Loại khách hàng:
                            <select name="customerType">
                                <option value="0"> Tất cả </option>
                                <option value="9"> Cơ quan, tổ chức </option>
                                @foreach (var item in loaiKH)
                                {
                                    <option value="@item.LoaiKHID">@item.Ten</option>
                                }
                            </select>
                        </p>
                        <p>
                        Từ ngày: <input type="number" name="fromDay" placeholder="@DateTime.Now.Day" min="1" max="31" /> 
                        tháng: <input type="number" name="fromMonth" placeholder="@DateTime.Now.Month" class="negNumber" min="1" max="12" /> 
                        năm <input type="number" name="fromYear" placeholder="@DateTime.Now.Year" class="negNumber" min="1970" /><br/>
                        đến ngày: <input type="number" name="toDay" placeholder="@DateTime.Now.Day" min="1" max="31"/> 
                        tháng: <input type="number" name="toMonth" placeholder="@DateTime.Now.Month" class="negNumber" min="1" max="12" /> 
                        năm <input type="number" name="toYear" placeholder="@DateTime.Now.Year" class="negNumber" min="1970" /></p>
                        <p><input type="submit" class="btn btn-success" value="Xuất báo cáo"></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function hideLoaiKhachHangOption(val) {
        $("select[name='customerType']").find('option[value="'+val+'"]').hide();
    }
    
    hideLoaiKhachHangOption(2);
    hideLoaiKhachHangOption(4);
    hideLoaiKhachHangOption(6);
</script>


