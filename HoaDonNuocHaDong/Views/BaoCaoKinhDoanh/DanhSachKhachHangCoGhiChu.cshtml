@using HoaDonNuocHaDong.Models.BaoCaoKinhDoanh;
@{
    ViewBag.Title = "DanhSachKhachHangCoGhiChu";
    Layout = "~/Views/Shared/BaoCaoKinhDoanh.cshtml";
    DateTime d1 = ViewBag.dt1;
}
<style>
    .xulybc {
        min-height: 400px;
        margin: 2% 10%;
    }

    .ten{
        line-height:1.2em;
    }

    .tong {
        margin: 1% 0 0 60%;
    }
</style>
<div class="ten center">Danh sách Khách hàng có ghi chú</div>
<div class="loc center">Tháng @d1.Month năm @d1.Year</div>
@{
    List<DanhSachKhachHangCoGhiChu> lst = (List<DanhSachKhachHangCoGhiChu>)ViewData["lst"];

}
<table class="table table-bordered" >
    <thead>
        <tr>
            <th rowspan="2">TT</th>
            <th rowspan="2">Tuyến</th>
            <th rowspan="2">TT đọc</th>
            <th rowspan="2">Mã KH</th>
            <th rowspan="2">Họ và Tên</th>
            <th rowspan="2">Địa Chỉ</th>
            <th rowspan="2">Nội dung ghi chú</th>
            <th colspan="4"><div class="center">Sản lượng tháng</div></th>
            
        </tr>
        <tr>
            <th>chỉ số đầu kỳ</th>
            <th>chỉ số cuối kỳ</th>
            <th>Sản lượng</th>
            <th>Loại giá</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach (DanhSachKhachHangCoGhiChu obj in lst)
        {
         <tr>
            <td>@i</td>
            <td>@obj.Tuyen</td>
            <td>@obj.ThuTuDoc</td>
            <td>@obj.MaKhachHang</td>
            <td>@obj.Ten</td>
            <td>@obj.Diachi</td>
            <td>@obj.NoiDungGhiChu</td>
            <td>@obj.ChiSoDauKy</td>
            <td>@obj.ChiSoCuoiKy</td>
            <td>@obj.SanLuong</td>
            <td>@obj.LoaiGia</td>
        </tr>
            i++;
        }
        
    </tbody>
</table>
<div class="tong"><b>Tổng cộng: @lst.Count khách hàng</b></div>