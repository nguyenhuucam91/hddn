@model HoaDonNuocHaDong.Areas.ThuNgan.Models.KhachHangDetailsModel
@using HDNHD.Models.Constants;
<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Cập nhật khách hàng</h3>
                    </div>
                    <div class="widget-content">
                        <ul class="nav nav-tabs">
                            <li><a href="@Url.Action("ChiTiet", new { id = Model.KhachHang.KhachhangID})">Thông tin khách hàng</a></li>
                            <li class="active"><a href="@Url.Action("CapNhat", new { id = Model.KhachHang.KhachhangID})">Cập nhật</a></li>
                            <li><a href="@Url.Action("LichSuDungNuoc", new { id = Model.KhachHang.KhachhangID})">Lịch sử dùng nước</a></li>
                            <li><a href="@Url.Action("LichSuGiaoDich", new { id = Model.KhachHang.KhachhangID})">Lịch sử giao dịch</a></li>
                        </ul>
                        <div class="tab-content">
                            <h4 class="header-title">Khách hàng: <span class="big">@Model.KhachHang.MaKhachHang - @Model.KhachHang.Ten</span></h4>
                            <p>
                                <strong>Địa chỉ: </strong>@Model.KhachHang.Diachi
                                <br />
                                <strong>Tuyến khách hàng: </strong>@ViewBag.KhachHangModel.TuyenKH.Matuyen - @ViewBag.KhachHangModel.TuyenKH.Ten
                            </p>
                            <hr/>
                            <form method="post" action="" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">Loại khách hàng</label>
                                    <div class="controls">
                                        <select class="select2" name="LoaiKhachHang">
                                            <option value="@ELoaiKhachHang.HoGiaDinh" @(Model.KhachHang.LoaiKHID == (int)ELoaiKhachHang.HoGiaDinh ? "selected" : "")>Hộ gia đình</option>
                                            <option value="@ELoaiKhachHang.HoKinhDoanhDichVu" @(Model.KhachHang.LoaiKHID == (int)ELoaiKhachHang.HoKinhDoanhDichVu ? "selected" : "")>Hộ kinh doanh dịch vụ</option>
                                            <option value="@ELoaiKhachHang.CoQuanDoanhNghiep" @(Model.KhachHang.LoaiKHID == (int)ELoaiKhachHang.CoQuanDoanhNghiep ? "selected" : "")>Cơ quan doanh nghiệp</option>
                                            <option value="@ELoaiKhachHang.KhuTapThe" @(Model.KhachHang.LoaiKHID == (int)ELoaiKhachHang.KhuTapThe ? "selected" : "")>Khu tập thể (hợp đồng tổng)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Hình thức thanh toán</label>
                                    <div class="controls">
                                        <select class="select2" name="HinhThucThanhToan">
                                            <option value="@EHinhThucThanhToan.TienMat" @(Model.KhachHang.HinhthucttID == (int)EHinhThucThanhToan.TienMat ? "selected" : "")>Tiền mặt</option>
                                            <option value="@EHinhThucThanhToan.ChuyenKhoan" @(Model.KhachHang.HinhthucttID == (int)EHinhThucThanhToan.ChuyenKhoan ? "selected" : "")>Chuyển khoản</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls">
                                        <button type="submit" class="btn btn-primary">Hoàn tất</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>