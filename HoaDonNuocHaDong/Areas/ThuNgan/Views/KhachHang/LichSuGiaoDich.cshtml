@model List<HDNHD.Models.DataContexts.GiaoDich>

<div class="main-inner">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Chi tiết lịch sử giao dịch</h3>
                </div>
                <div class="widget-content">
                    <ul class="nav nav-tabs">
                        <li><a href="@Url.Action("ChiTiet", new { id = ViewBag.KhachHang.KhachhangID})">Thông tin khách hàng</a></li>
                        <li><a href="@Url.Action("CapNhat", new { id = ViewBag.KhachHang.KhachhangID})">Cập nhật</a></li>
                        <li><a href="@Url.Action("LichSuDungNuoc", new { id = ViewBag.KhachHang.KhachhangID})">Lịch sử dùng nước</a></li>
                        <li class="active"><a href="@Url.Action("LichSuGiaoDich", new { id = ViewBag.KhachHang.KhachhangID})">Lịch sử giao dịch</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="col-md-12">
                            <h4 class="header-title">Khách hàng: <span class="big">@ViewBag.KhachHang.MaKhachHang - @ViewBag.KhachHang.Ten</span></h4>

                            <table class="table table-striped table-bordered data-table">
                                <thead>
                                    <tr>
                                        <th>TT</th>
                                        <th>Tháng</th>
                                        <th>Số tiền phải nộp</th>
                                        <th>Trạng thái thu</th>
                                        <th>Ngày thu</th>
                                        <th>Số tiền đã nộp</th>
                                    </tr>
                                </thead>

                            </table>
                            @Html.Partial("_Pager", (object)ViewBag.Pager)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
