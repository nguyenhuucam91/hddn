@model List<HoaDonNuocHaDong.Areas.ThuNgan.Models.DuCoModel>

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Báo cáo dư có</h3>
                    </div>
                    <div class="widget-content">
                        @Html.Partial("_DuCoFilter", (object) ViewBag.Filter)
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered data-table">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Tuyến khách hàng</th>
                                        <th>Số tiền dư</th>
                                        <th>Nhân viên</th>
                                    </tr>
                                </thead>
                                @{ var tong = 0; int i = 1; }
                                @foreach (HoaDonNuocHaDong.Areas.ThuNgan.Models.DuCoModel item in Model)
                                {
                                    tong += (item.DuCo.SoTienDu ?? 0);
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.DuCo.KhachhangID</td>
                                        <td><a href="@Url.Action("ChiTiet", "KhachHang", new { area="ThuNgan", id=@item.KhachHang.KhachhangID })" target="_blank">@item.KhachHang.Ten</a></td>
                                        <td>@item.KhachHang.Diachi</td>
                                        <td>@item.TuyenKH.Ten</td>
                                        <td>@(item.DuCo.SoTienDu ?? 0)</td>
                                        
                                    </tr>
                                    i++;
                                }
                                <tfoot>
                                    <tr>
                                        <td colspan="5">Tổng</td>
                                        <td class="tong"> @tong </td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                            @Html.Partial("_Pager", (object)ViewBag.Pager)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // onInit:
            loadQuanHuyen($(".sl-quan-huyen"), "@ViewBag.Filter.QuanHuyenID");

        });

        // load data onChange
        $(".sl-quan-huyen").on("change", function () {
            // get selected quanHuyenID
            var quanHuyenID = $(this).val();

            // loadTo
            loadTo($(".sl-to"), quanHuyenID, "@ViewBag.Filter.ToID");
        });

        $(".sl-to").on("change", function () {
            // get selected toID
            var toID = $(this).val();

            // loadNhanVien
            loadNhanVien($(".sl-nhan-vien"), toID, "@ViewBag.Filter.NhanVienID");
        });
    </script>
}