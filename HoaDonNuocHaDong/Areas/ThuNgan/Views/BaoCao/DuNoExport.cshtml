@model List<HoaDonNuocHaDong.Areas.ThuNgan.Models.DuNoModel>
@{
    Layout = null;
}
<table border="1">
    <thead>
        <tr>
            <th>Mã khách hàng</th>
            <th>Tên khách hàng</th>
            <th>Địa chỉ</th>
            <th>Tuyến</th>
            <th>Tháng</th>
            <th>Số tiền</th>
            <th>Nhân viên</th>
        </tr>
    </thead>
    <tbody>
        @{ double tong = 0; }
        @foreach (HoaDonNuocHaDong.Areas.ThuNgan.Models.DuNoModel item in Model)
        {
            if (item.HoaDon.SoTienNopTheoThang != null)
            {
                tong += item.HoaDon.SoTienNopTheoThang.SoTienPhaiNop ?? 0;
            }
            <tr>
                <td>@item.KhachHang.MaKhachHang</td>
                <td>@item.KhachHang.Ten</td>
                <td>@item.KhachHang.Diachi</td>
                <td>@item.TuyenKhachHang.Ten</td>
                <td>@item.HoaDon.ThangHoaDon/@item.HoaDon.NamHoaDon</td>
                <td>@(item.SoTienNopTheoThang != null ? item.SoTienNopTheoThang.SoTienPhaiNop : 0)</td>
                <td>@item.NhanVien.Ten</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr role="row" style="font-weight:bold">
            <td colspan="5" style="text-align: right">Tổng</td>
            <td colspan="2">@tong</td>
        </tr>
    </tfoot>
</table>