@model List<HoaDonNuocHaDong.Areas.ThuNgan.Models.DuNoModel>
<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Báo cáo dư nợ</h3>
                        </div>
                        <div class="widget-content">
                            <h4>Danh sách khách hàng chưa thanh toán: </h4>
                            <div class="tabable">
                                @Html.Partial("_BaoCaoFilter")
                                <div class="tab-content">
                                    <!-- Danh sachs bao gồm khách hàng không thanh toán công nợ từ tháng trước -->
                                    <div class="tab-pane active" id="tab-nhanvien">
                                        <div>
                                            <table class="table table-striped table-bordered data-table">
                                                <thead>
                                                    <tr>
                                                        <th>Mã khách hàng</th>
                                                        <th>Tên khách hàng</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Tuyến</th>
                                                        <th>Tháng</th>
                                                        <th>Số tiền</th>
                                                        <th>Nhân viên</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ double tong = 0; }
                                                    @foreach (HoaDonNuocHaDong.Areas.ThuNgan.Models.DuNoModel item in Model)
                                                    {
                                                        if (item.HoaDon.SoTienNopTheoThang != null)
                                                        {
                                                            tong += item.HoaDon.SoTienNopTheoThang.SoTienPhaiNop ?? 0;
                                                        }
                                                        <tr>
                                                            <td>@item.KhachHang.MaKhachHang</td>
                                                            <td>
                                                                <a class="passmodal" href="#" style="color:black;" data-toggle="modal" data-target="#myModal"
                                                                   data-khachhang="@item.KhachHang.KhachhangID" data-loaikhachhang="@item.KhachHang.LoaiKHID"
                                                                   data-thanhtoan="@item.KhachHang.HinhthucttID" data-hd="@item.HoaDon.Sohoadon">
                                                                    @item.KhachHang.Ten
                                                                </a>
                                                            </td>
                                                            <td>@item.KhachHang.Diachi</td>
                                                            <td>@item.TuyenKhachHang.Ten</td>
                                                            <td>@item.HoaDon.ThangHoaDon/@item.HoaDon.NamHoaDon</td>
                                                            <td>@(item.SoTienNopTheoThang != null ? item.SoTienNopTheoThang.SoTienPhaiNop : 0)</td>
                                                            <td>@item.NhanVien.Ten</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr role="row" style="font-weight:bold">
                                                        <td colspan="5" style="text-align: right">Tổng</td>
                                                        <td colspan="2">@tong</td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                            @Html.Partial("_Pager", (object)ViewBag.Pager)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
