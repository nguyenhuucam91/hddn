@model List<HoaDonNuocHaDong.Areas.ThuNgan.Models.DuNoModel>
<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-th-list"></i>
                            <h3>Báo cáo dư nợ</h3>
                        </div>
                        <div class="widget-content">
                            <div class="tabable">
                                @Html.Partial("_DuNoFilter", (object)ViewBag.Filter)
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab-nhanvien">
                                        <div>
                                            <table class="table table-striped table-bordered data-table">
                                                <thead>
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>ID khách hàng</th>
                                                        <th>Mã khách hàng</th>
                                                        <th>Tên khách hàng</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Tuyến</th>
                                                        <th>Tháng</th>
                                                        <th>Số tiền</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ double tong = 0; int stt = 1; }
                                                    @foreach (HoaDonNuocHaDong.Areas.ThuNgan.Models.DuNoModel item in Model)
                                                    {
                                                        if (item.SoTienNopTheoThang != null)
                                                        {
                                                            tong += item.SoTienNopTheoThang.SoTienPhaiNop ?? 0;
                                                        }
                                                        <tr>
                                                            <td>@(stt++)</td>
                                                            <td>@item.KhachHang.KhachhangID</td>
                                                            <td>@item.KhachHang.MaKhachHang</td>
                                                            <td><a href="@Url.Action("ChiTiet", "KhachHang", new { area="ThuNgan", id=item.KhachHang.KhachhangID})" target="_blank">@item.KhachHang.Ten</a></td>
                                                            <td>@item.KhachHang.Diachi</td>
                                                            <td>@item.TuyenKhachHang.Ten</td>
                                                            <td>@item.HoaDon.ThangHoaDon/@item.HoaDon.NamHoaDon</td>
                                                            <td>@(item.SoTienNopTheoThang != null ? item.SoTienNopTheoThang.SoTienPhaiNop : 0)</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr role="row" style="font-weight:bold">
                                                        <td colspan="6" style="text-align: right">Tổng</td>
                                                        <td colspan="2">@tong</td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                            @Html.Partial("_Pager", (object)ViewBag.Pager)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // onInit:
            loadQuanHuyen($(".sl-quan-huyen"), "@ViewBag.Filter.QuanHuyenID");

        });

        // load data onChange
        $(".sl-quan-huyen").on("change", function () {
            // get selected quanHuyenID
            var quanHuyenID = $(this).val();

            // loadTo
            loadTo($(".sl-to"), quanHuyenID, "@ViewBag.Filter.ToID");
        });

        $(".sl-to").on("change", function () {
            // get selected toID
            var toID = $(this).val();

            // loadNhanVien
            loadNhanVien($(".sl-nhan-vien"), toID, "@ViewBag.Filter.NhanVienID");
        });
    </script>
}