                                            {
                                                <div class="span3">Báo cáo dư nợ tháng</div> <input type="text" name="month" />
                                                @Html.Raw("năm ") <input type="text" name="year" />
                                                <input type="hidden" name="nhanvienid" />
                                                <input type="submit" value="Xem báo cáo" />
                                            }
                                            @using (Html.BeginForm("BaoCaoDoanhThuTheoThang", "BaoCao", FormMethod.Get))
                                            {
                                                <div class="span3">@Html.Raw("Báo cáo doanh thu theo tháng ")</div> <input type="text" name="month" />
                                                @Html.Raw("năm ") <input type="text" name="year" />
                                                <input type="hidden" name="nhanvienid" />
                                                <input type="submit" value="Xem báo cáo" />
                                            }
                                            @using (Html.BeginForm("DanhSachKhachHangInHoaDon", "Congno", FormMethod.Get))
                                            {
                                                <div class="span3">@Html.Raw("Danh sách hóa đơn khách hàng tổ chức, tập thể")</div> <input type="text" name="month" />
                                                @Html.Raw("năm ") <input type="text" name="year" />
                                                <input type="hidden" name="nhanvienid" />
                                                <input type="submit" value="Xem báo cáo" />
                                            }

                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
