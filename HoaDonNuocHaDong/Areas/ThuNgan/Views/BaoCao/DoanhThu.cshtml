<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Báo cáo doanh thu</h3>
                    </div>
                    <div class="widget-content">
                        @Html.Partial("_DoanhThuFilter", (object)ViewBag.Filter)
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered data-table">
                                <thead>
                                    <tr>
                                        <th>Dư nợ đầu kỳ</th>
                                        <th>Dư có đầu kỳ</th>
                                        <th>HĐ in trong tháng</th>
                                        <th>Doanh thu phải thu trong tháng</th>
                                        <th>Doanh thu đã thu trong tháng</th>
                                        <th>Dư nợ cuối kỳ</th>
                                        <th>Dư có cuối kỳ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.DuNoDauKy)</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.DuCoDauKy)</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.SoTienTrenHoaDon)</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.SoTienPhaiThu)</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.SoTienDaThu)</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.DuNoCuoiKy)</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(ViewBag.DuCoCuoiKy)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        $(document).ready(function () {

            // onInit:
            loadQuanHuyen($(".sl-quan-huyen"), "@ViewBag.Filter.QuanHuyenID");

            // load data onChange
            $(".sl-quan-huyen").on("change", function () {
                // get selected quanHuyenID
                var quanHuyenID = $(this).val();

                // loadTo
                loadTo($(".sl-to"), quanHuyenID, "@ViewBag.Filter.ToID");
            });

            $(".sl-to").on("change", function () {
                // get selected toID
                var toID = $(this).val();

                // loadNhanVien
                loadNhanVien($(".sl-nhan-vien"), toID, "@ViewBag.Filter.NhanVienID");
            });

            $(".sl-nhan-vien").on("change", function () {
                // get selected nhanVien
                var nhanVienID = $(this).val();

                // loadTuyen
                loadTuyen($(".sl-tuyen-kh"), nhanVienID, "@ViewBag.Filter.TuyenKHID");
            });

        });
</script>
}