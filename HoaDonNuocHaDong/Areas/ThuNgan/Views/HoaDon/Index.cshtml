@model List<HoaDonNuocHaDong.Areas.ThuNgan.Models.HoaDonModel>

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Quản lý công nợ khách hàng</h3>
                    </div>
                    <div class="widget-content">
                        @if (ViewBag.Filter.From != null)
                        {
                            <h4 class="header-title">Danh sách hóa đơn tháng <span class="big">@ViewBag.Filter.From.ToString("MM / yyyy")</span> </h4>
                        }
                        else
                        {
                            <h4 class="header-title" style="color: red;">Danh sách hóa đơn đã hết hạn: </h4>
                        }

                        @Html.Partial("_HoaDonFilter", (object)ViewBag.Filter)
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered data-table">
                                <thead>
                                    <tr>
                                        <th>TT</th>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Tháng</th>
                                        <th>Số tiền phải nộp</th>
                                        <th>Trạng thái thu</th>
                                        <th>Ngày thu</th>
                                        <th>Số tiền đã nộp</th>
                                    </tr>
                                </thead>
                                @{
                                    var stt = 0;
                                    int tong = 0;
                                }
                                @foreach (HoaDonNuocHaDong.Areas.ThuNgan.Models.HoaDonModel item in Model)
                                {
                                    tong += item.SoTienNopTheoThang.SoTienDaThu.Value;
                                    <tr>
                                        <td style="text-align: right">@(++stt)</td>
                                        <td class="text-center">@item.KhachHang.MaKhachHang</td>
                                        <td>
                                            <a class="passmodal" href="#" style="color:black;" data-toggle="modal" data-target="#myModal"
                                               data-khachhang="@item.KhachHang.KhachhangID" data-loaikhachhang="@item.KhachHang.LoaiKHID"
                                               data-thanhtoan="@item.KhachHang.HinhthucttID" data-hd="@item.HoaDon.Sohoadon">
                                                @item.KhachHang.Ten
                                            </a>
                                        </td>
                                        <td>@item.KhachHang.Diachi</td>
                                        <td>@item.HoaDon.ThangHoaDon/@item.HoaDon.NamHoaDon</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(item.SoTienNopTheoThang.SoTienPhaiNop.Value)</td>
                                        <td style="text-align: center;">
                                            <input type="checkbox" @(item.HoaDon.Trangthaithu == true ? "checked" : "") class="chk-thanh-toan" value="@item.HoaDon.HoadonnuocID" />
                                        </td>
                                        <td width=10%>
                                            <input type="date" class="tbx-ngay-thu" value="@(item.HoaDon.NgayNopTien != null ? item.HoaDon.NgayNopTien.Value.ToString("dd/MM/yyyy") : "")" style="width: 70px;" />
                                        </td>
                                        <td style="text-align: right; width: 12%">
                                            <span class="txt-so-tien-da-nop">
                                                @HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(item.SoTienNopTheoThang.SoTienDaThu.Value)
                                            </span>
                                            <a class="passGiaoDich" href="#" style="color:black;" data-toggle="modal" data-target="#ThemTien"
                                               data-khachhang="@item.KhachHang.KhachhangID" data-tiennoptheothang="@item.HoaDon.SoTienNopTheoThangID" data-hdid="@item.HoaDon.HoadonnuocID">
                                                <button style="margin-bottom:8px">+</button>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                <tfoot>
                                    <tr>
                                        <td colspan="5">Tổng tiền trong hóa đơn</td>
                                        <td class="tong"> @Html.Raw(HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(tong)) </td>
                                        <td colspan="2"></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                            @Html.Partial("_Pager", (object)ViewBag.Pager)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- modal box cho chọn tên -->
<div id="myModal" class="modal fade" role="dialog" style="top:50%;display:none">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Chi tiết</h3>
            </div>
            <div class="modal-body">
                <h5><a href="">Xem chi tiết thông tin cá nhân</a></h5>

                <div id="thongtin"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal box đóng thêm tiền của khách hàng-->
<div id="ThemTien" class="modal fade" role="dialog" style="top:50%;display:none">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Khách hàng đóng thêm tiền vào dư có</h3>
            </div>
            <div class="modal-body">

                <div class="span3">Số tiền khách hàng đóng thêm</div> <input class="form-control" type="text" name="sotien" required /> <br />
                <div class="span3">Ngày nộp</div> <input type="date" name="ngaynop" id="ngaynop" />
                <input id="tiennoptheothangID" type="hidden" name="tiennoptheothangID">
                <button type="submit" class="bnt btn-success" style="margin-bottom:10px">Nộp tiền</button>

            </div>
            <div class="modal-body">
                <h3>Lịch sử giao dịch của khách hàng</h3>
                <br />
                <div id="ls" style="display:inline !important">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- end modal -->
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // onInit:
            loadQuanHuyen($(".sl-quan-huyen"), "@ViewBag.Filter.QuanHuyenID");
        });

        // load data onChange
        $(".sl-quan-huyen").on("change", function () {
            // get selected quanHuyenID
            var quanHuyenID = $(this).val();

            // loadTo
            loadTo($(".sl-to"), quanHuyenID, "@ViewBag.Filter.ToID");
        });

        $(".sl-to").on("change", function () {
            // get selected toID
            var toID = $(this).val();

            // loadNhanVien
            loadNhanVien($(".sl-nhan-vien"), toID, "@ViewBag.Filter.NhanVienID");
        });

        $(".sl-nhan-vien").on("change", function () {
            // get selected nhanVien
            var nhanVienID = $(this).val();

            // loadTuyen
            loadTuyen($(".sl-tuyen-kh"), nhanVienID, "@ViewBag.Filter.TuyenKHID");
        });


        /***** Thanh Toan HD *****/
        /**
         * update HoaDon status against database & get back updated model
         * update GUI trangThaiThu, ngayThu, soTienDaNop
         */
        function capNhatThanhToan(hoaDonID, $trangThaiThu, $ngayThu, $soTienDaNop) {
            var trangThaiThu = $trangThaiThu.is(":checked"),
                ngayThu = $ngayThu.val();

            if (!trangThaiThu) {
                var confirmed = confirm("Bỏ trạng thái thu sẽ XÓA tất cả các giao dịch trong tháng của khách hàng này. Bạn chắc chắn?");

                if (!confirmed) {
                    // set back checked
                    $trangThaiThu.prop("checked", true);
                    return;
                }
            }

            $.ajax({
                url: "/Services/HoaDon/CapNhatThanhToan",
                data: { hoaDonID: hoaDonID, trangThaiThu: trangThaiThu, ngayThu: ngayThu }
            }).done(function (data) {
                $trangThaiThu.prop("checked", data.Data.HoaDon.TrangThaiThu);
                $ngayThu.val(data.Data.HoaDon.NgayNopTien);
                $soTienDaNop.html(data.Data.SoTienNopTheoThang.SoTienDaThu);

                if (!data.IsSuccess)
                    alert ("Lỗi cập nhật trạng thái thu! vui lòng thử lại.");
            });
        }

        function capNhatNgayThu(date) {

        }

        /***** END Thanh Toan HD *****/

        $(".chk-thanh-toan").change(function () {
            var $trangThaiThu = $(this),
                hoaDonID = $trangThaiThu.val();
                $tr = $trangThaiThu.closest("tr"),
                $ngayThu = $tr.find(".tbx-ngay-thu"),
                $soTienDaNop = $tr.find(".txt-so-tien-da-nop")

                capNhatThanhToan(hoaDonID, $trangThaiThu, $ngayThu, $soTienDaNop);
        });
    </script>
}