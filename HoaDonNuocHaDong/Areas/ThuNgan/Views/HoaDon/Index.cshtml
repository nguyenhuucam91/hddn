@model List<HoaDonNuocHaDong.Areas.ThuNgan.Models.HoaDonModel>

<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="widget">
                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>Quản lý công nợ khách hàng</h3>
                    </div>
                    <div class="widget-content">
                        @Html.Partial("_HoaDonFilter", (object)ViewBag.Filter)
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered data-table">
                                <thead>
                                    <tr>
                                        <th>TT</th>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Tháng</th>
                                        <th>Số tiền phải nộp</th>
                                        <th>Trạng thái thu</th>
                                        <th>Ngày thu</th>
                                        <th>Số tiền đã nộp</th>
                                    </tr>
                                </thead>
                                @{
                                    var stt = 0;
                                    int tong = 0;
                                }
                                @foreach (HoaDonNuocHaDong.Areas.ThuNgan.Models.HoaDonModel item in Model)
                                {
                                    tong += item.SoTienNopTheoThang.SoTienDaThu ?? 0;
                                    <tr>
                                        <td style="text-align: right">@(++stt)</td>
                                        <td class="text-center">@item.KhachHang.MaKhachHang</td>
                                        <td>
                                            <a href="@Url.Action("LichSuDungNuoc", "KhachHang", new { area="ThuNgan", id=@item.KhachHang.KhachhangID })" target="_blank">
                                                @item.KhachHang.Ten
                                            </a>
                                        </td>
                                        <td>@item.KhachHang.Diachi</td>
                                        <td>@item.HoaDon.ThangHoaDon/@item.HoaDon.NamHoaDon</td>
                                        <td style="text-align: right;">@HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(item.SoTienNopTheoThang.SoTienPhaiNop.Value)</td>
                                        <td style="text-align: center;">
                                            <input type="checkbox" @(item.HoaDon.Trangthaithu == true ? "checked" : "") class="chk-thanh-toan" value="@item.HoaDon.HoadonnuocID" />
                                        </td>
                                        <td width=10%>
                                            <input type="date" class="tbx-ngay-thu" value="@(item.HoaDon.NgayNopTien != null ? item.HoaDon.NgayNopTien.Value.ToString("dd/MM/yyyy") : "")" style="width: 70px;" />
                                        </td>
                                        <td style="text-align: right; width: 12%">
                                            <span class="txt-so-tien-da-nop" style="@(item.SoTienNopTheoThang.SoTienDaThu.Value > item.SoTienNopTheoThang.SoTienPhaiNop.Value ? "color:red": "")">
                                                @HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(item.SoTienNopTheoThang.SoTienDaThu.Value)
                                            </span>
                                            <a href="@Url.Action("ThemVaoDuCo", "HoaDon", new { area="ThuNgan", hoaDonID=@item.HoaDon.HoadonnuocID })" data-toggle="modal" data-target="#modal_them-vao-du-co" data-remote="false" class="btn btn-small" style="margin-bottom: 8px">
                                                +
                                            </a>
                                        </td>
                                    </tr>
                                }
                                <tfoot>
                                    <tr>
                                        <td colspan="5">Tổng tiền trong hóa đơn</td>
                                        <td class="tong"> @Html.Raw(HoaDonNuocHaDong.Helper.HoaDonNuoc.formatCurrency(tong)) </td>
                                        <td colspan="2"></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                            @Html.Partial("_Pager", (object)ViewBag.Pager)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal box đóng thêm tiền của khách hàng-->
<div id="modal_them-vao-du-co" class="modal fade" role="dialog" style="top:50%;display:none">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Khách hàng đóng thêm tiền vào dư có</h3>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- end modal -->
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // onInit:
            loadQuanHuyen($(".sl-quan-huyen"), "@ViewBag.Filter.QuanHuyenID");

            // Fill modal with content from link href
            $("#modal_them-vao-du-co").on("show.bs.modal", function (e) {
                var link = $(e.relatedTarget);
                $(this).find(".modal-body").load(link.attr("href"));
            });
        });

        // load data onChange
        $(".sl-quan-huyen").on("change", function () {
            // get selected quanHuyenID
            var quanHuyenID = $(this).val();

            // loadTo
            loadTo($(".sl-to"), quanHuyenID, "@ViewBag.Filter.ToID");
        });

        $(".sl-to").on("change", function () {
            // get selected toID
            var toID = $(this).val();

            // loadNhanVien
            loadNhanVien($(".sl-nhan-vien"), toID, "@ViewBag.Filter.NhanVienID");
        });

        $(".sl-nhan-vien").on("change", function () {
            // get selected nhanVien
            var nhanVienID = $(this).val();

            // loadTuyen
            loadTuyen($(".sl-tuyen-kh"), nhanVienID, "@ViewBag.Filter.TuyenKHID");
        });

        $(".chk-thanh-toan").change(function () {
            var $trangThaiThu = $(this),
                hoaDonID = $trangThaiThu.val();
                $tr = $trangThaiThu.closest("tr"),
                $ngayThu = $tr.find(".tbx-ngay-thu"),
                $soTienDaNop = $tr.find(".txt-so-tien-da-nop")

                capNhatThanhToan(hoaDonID, $trangThaiThu, $ngayThu, $soTienDaNop);
        });

        $(".tbx-ngay-thu").change(function () {
            var $ngayThu = $(this),
                $tr = $ngayThu.closest("tr"),
                $trangThaiThu = $tr.find(".chk-thanh-toan");

            var ngayThu = $ngayThu.val(),
                trangThaiThu = $trangThaiThu.is(":checked"),
                hoaDonID = $trangThaiThu.val();

            if (trangThaiThu) {
                capNhatNgayThu(hoaDonID, ngayThu);
            }
        });
    </script>
}